<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SecondFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image"
        android:id="@+id/id_second_img"/>
    
    <EditText
        android:id="@+id/id_second_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:hint="enter city"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:textColorHint="@color/white"
        android:background="@drawable/background_cs_first"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintEnd_toStartOf="@id/id_second_button_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/id_second_cs_info"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_cs_item_rv"
        app:layout_constraintTop_toBottomOf="@id/id_second_et"
        app:layout_constraintBottom_toTopOf="@id/id_second_button_back">

        <TextView
            android:id="@+id/id_second_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhaijaan"
            app:layout_constraintEnd_toStartOf="@id/id_second_tv_temp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/id_second_cs_temp"
            android:background="@drawable/background_cs_first"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@id/id_second_tv_city">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="24sp"
                android:id="@+id/id_second_tv_max_temp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/id_second_tv_feels_like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/id_second_tv_min_temp"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintHeight_percent="0.4"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/id_second_tv_feels_like"
                android:id="@+id/id_second_tv_min_temp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_second_tv_max_temp"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintHeight_percent="0.4"/>

            <TextView
                android:id="@+id/id_second_tv_feels_like"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_second_tv_max_temp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="20sp"
            android:background="@drawable/background_cs_first"
            android:id="@+id/id_second_tv_main"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintEnd_toStartOf="@id/id_second_tv_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_second_cs_temp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_cs_first"
            android:id="@+id/id_second_tv_desc"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/id_second_tv_main"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_second_cs_temp"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="35sp"
            android:id="@+id/id_second_tv_temp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/id_second_tv_city"
            app:layout_constraintTop_toTopOf="@id/id_second_tv_city"
            app:layout_constraintBottom_toBottomOf="@id/id_second_tv_city"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@id/id_second_tv_humidity"
            android:background="@drawable/background_tv_second"
            android:id="@+id/id_second_tv_pressure"
            app:layout_constraintWidth_percent="0.95"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_second_tv_desc"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:textSize="17sp"
            android:background="@drawable/background_tv_second"
            android:id="@+id/id_second_tv_humidity"
            app:layout_constraintBottom_toTopOf="@id/id_second_tv_clouds_all"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_second_tv_pressure"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:textSize="17sp"
            android:background="@drawable/background_tv_second"
            android:id="@+id/id_second_tv_clouds_all"
            app:layout_constraintBottom_toTopOf="@id/id_second_tv_visibility"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_second_tv_humidity"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:textSize="17sp"
            android:background="@drawable/background_tv_second"
            android:id="@+id/id_second_tv_visibility"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintBottom_toTopOf="@id/id_second_tv_wind_speed"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_second_tv_clouds_all"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:textSize="17sp"
            android:background="@drawable/background_tv_second"
            android:id="@+id/id_second_tv_wind_speed"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_second_tv_visibility"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/search_image"
        app:layout_constraintStart_toEndOf="@id/id_second_et"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.2"
        android:id="@+id/id_second_button_search"
        app:layout_constraintTop_toTopOf="@id/id_second_et"
        app:layout_constraintBottom_toBottomOf="@id/id_second_et"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="search"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/id_second_button_search"
        app:layout_constraintTop_toBottomOf="@id/id_second_button_search"
        app:layout_constraintEnd_toEndOf="@id/id_second_button_search"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo_bhaijaan"
        android:text="back"
        android:textSize="23sp"
        android:id="@+id/id_second_button_back"
        style="@style/ButtonStyle"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>